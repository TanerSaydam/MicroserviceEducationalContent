{
  "Routes": [
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/api/products/{catchAll}",
      "DownstreamPathTemplate": "/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }//,
        //{
        //  "Host": "product2",
        //  "Port": 8080
        //}
      ],
      "RateLimitOptions": {
        "ClientIdHeader": "ClientId",
        "Limit": 100,
        "Period": "1s"
      },
      "ServiceName": "ProductWebAPI",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }      
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001",
    "RateLimitOptions": {
      "HttpStatusCode": 429
    },
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}